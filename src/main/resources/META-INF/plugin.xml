<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<!-- 设置不重启 -->
<idea-plugin require-restart="false">
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>slowgenius-tools</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>SlowToolKit</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="slowgenius@163.com" url="https://gitee.com/slowgenius_admin">笨天才</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description>
        <![CDATA[
        a plugin to help you to code, slow-genius's toolkit not a slow toolkit
        Features are under development
    <p>Includes support for:
    <ul>
      <li>a simple translator</li>
      <li>a kind of DDD project scaffold generator(this is only for specific company member temporarily)</li>
      <li>One click generates @TableId/@TableField</li>
      <li>generate relevant classes when created entity</li>
    </ul>
    </p>
    <p>
        If you have some ideas, please contact me via slowgenius@163.com
    </p>
  ]]>
    </description>

    <change-notes>
        <![CDATA[
    <ul>
      <p>2.4.2 if created name is start with a lower case letter, create a package </p>
      <p>2.4.1 reformat generated entity doc </p>
      <p>2.4.0 now you can create classes by classes name spilt by ,</p>
      <p>2.3.2 fix bug</p>
      <p>2.3.1 add @author and @since on template, Convert sql type Decimal to java BigDecimal</p>
      <p>2.3.0 generate Java entity based on database tables</p>
      <p>2.2.0 generate @RequestParam on params</p>
      <p>2.1.1 fix errors when creating classes</p>
      <p>2.1.0 generate relevant classes when created entity</p>
      <p>2.0.1 Optimizing the visible of generating plugin when the caret is outside the class</p>
    </ul>

  ]]>
    </change-notes>
    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.database</depends>

    <idea-version since-build="191"/>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="ToolKit"
                    canCloseContents="false"
                    anchor="bottom"
                    factoryClass="com.slowgenius.toolkit.tranlator.FindNameFactory"
                    icon="/icons/refresh.svg"/>
        <applicationService serviceImplementation="com.slowgenius.toolkit.project_gen.infrastructure.DataSetting"/>
        <projectTemplatesFactory implementation="com.slowgenius.toolkit.project_gen.factory.TemplateFactory"/>

        <intentionAction>
            <className>com.slowgenius.toolkit.requestparam_intention.action.RequestParamIntention</className>
            <category>SlowToolkit</category>
        </intentionAction>
        <themeProvider id="abf70c0c-34c7-4b87-baf3-dfd4a6506e54"
                       path="/theme/TestTheme.theme.json"/>
    </extensions>

    <actions>
        <action id="mybatis-plus-gen" class="com.slowgenius.toolkit.mybatis_plus_gen.action.MybatisPlusGenerateAction"
                text="Gen @TableField" description="Generate util" icon="/icons/logo.svg">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift K"/>
        </action>
        <action id="CreateClasses" class="com.slowgenius.toolkit.create_classes.action.CreateClasses"
                text="Create Classes">
            <add-to-group group-id="NewGroup1" anchor="first"/>
        </action>
        <!--        <action id="CreateClasses" class="CreateTest" text="11111111111">-->
        <!--            <add-to-group group-id="GenerateGroup" anchor="first"/>-->
        <!--            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift o"/>-->
        <!--        </action>-->

        <action id="gen-java-class" class="com.slowgenius.toolkit.gen_entity.action.GenerateEntityAction"
                text="Gen Java Entity"
                popup="true">
            <!--生成代码菜单-->
            <add-to-group group-id="DatabaseViewPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>